@model IEnumerable<Shopweb.Models.Account>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Tài Khoản</h2>

<p>
    @Html.ActionLink("Thêm mới tài khoản", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.loginName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.role)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem=> item.loginName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.role)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.loginName.Trim() }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.loginName.Trim() }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.loginName.Trim() })
            </td>
        </tr>
    }

</table>
