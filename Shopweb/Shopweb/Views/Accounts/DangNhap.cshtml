
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: sans-serif;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            /* height: 100vh;*/
            background-color: rgb(31, 58, 74);
        }

        .container {
            margin-top: 30px;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 560px;
            height: 580px;
            background-color: #F8F7F7;
            border-radius: 25px;
        }

        h1 {
            text-align: center;
            font-size: 54px;
        }

        h1, .label-input {
            color: #2B3674;
        }

        .input-form {
            margin: 0px 0 10px 20px;
        }

        .label-input {
            font-size: 20px;
            margin-bottom: 8px;
        }

        input {
            width: 460px;
            height: 60px;
            border-radius: 50px;
            border: solid #C4B7B7 1px;
            box-shadow: rgba(0, 0, 0, 0.15) 1.95px 1.95px 2.6px;
            padding: 0 20px;
            font-size: 20px;
        }

        .submit-button {
            margin: 30px 0 0 20px;
        }

        button {
            background-color: #00ACE8;
            width: 460px;
            height: 50px;
            border-radius: 16px;
            border: none;
            color: white;
            font-weight: bold;
            font-size: 20px;
        }

            button:hover {
                cursor: pointer;
                background-color: pink;
            }

        .register {
            margin: 15px 0 0 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

           


        .btn {
            background-color: black;
            width: 460px;
            height: 50px;
            border-radius: 16px;
            border: none;
            padding-top: 12px;
            color: white;
            text-align: center;
            font-weight: bold;
            font-size: 20px;
            text-decoration: none
        }
        .btn:hover {
            cursor: pointer;
            background-color: pink;
        }
    </style>

</head>
<body>
 
    <br />

    <div style="margin-right: 20px">
        <img src="~/Content/Images/img-login.jpeg" style="border-radius: 15px; width: 580px" />
    </div>
    <div class="container">
        <form action="/Accounts/DangNhap" method="post">
            <div class="title">
                <h1>
                    Đăng nhập
                </h1>
            </div>
            <div class="thong-bao" style=" width: 460px; height: 50px; padding-left: 40px;">
                <p style="font-size:16px; line-height: 50px; color: red; text-align: center">@ViewBag.thongBao</p>
            </div>
            <div class="input-form">
                <p class="label-input">Tên đăng nhập</p>
                <input type="text" name="loginName" id="">
            </div>

            <div class="input-form">
                <p class="label-input">Mật khẩu</p>
                <input type="password" name="password" id="">
            </div>

            <div class="submit-button">
                <button type="submit">Đăng nhập</button>
            </div>
            <div class="register d-flex align-content-center">

                <a href="/Accounts/DangKy" class="btn">Đăng ký</a>




            </div>

        </form>
    </div>
</body>
</html>
