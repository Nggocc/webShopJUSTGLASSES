
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: sans-serif;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            /* height: 100vh;*/
            background-color: white;
        }

        .container {
            margin-top: 30px;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 560px;
            height: 580px;
            background-color: #F8F7F7;
            border-radius: 25px;
        }

        h2 {
            text-align: center;
            font-size:40px;
        }

        h2, .label-input {
            color: #2B3674;
        }

        .input-form {
            margin: 0px 0 10px 20px;
        }

        .label-input {
            font-size: 18px;
            margin-bottom: 8px;
        }

        input {
            width: 460px;
            height: 45px;
            border-radius: 50px;
            border: solid #C4B7B7 1px;
            box-shadow: rgba(0, 0, 0, 0.15) 1.95px 1.95px 2.6px;
            padding: 0 20px;
            font-size: 15px;
        }

        .submit-button {
            margin: 30px 0 0 20px;
        }

        button {
            background-color: #00ACE8;
            width: 460px;
            height: 50px;
            border-radius: 16px;
            border: none;
            color: white;
            font-weight: bold;
            font-size: 20px;
        }

            button:hover {
                cursor: pointer;
                background-color: pink;
            }

        .register {
            background-color: black;
        }
    </style>

</head>
<body>
   
    <div style="margin-right: 20px">
        <img src="~/Content/Images/img-register.jpeg" style="border-radius: 15px; width: 550px; height: 400px; object-fit: cover" />
    </div>
    <div class="container">
        <form action="/Accounts/DangKy" method="post">
            <div class="title">
                <h2>
                    Đăng ký Email
                </h2>
                <p style="margin-top: 10px">Hãy đăng ký để được hưởng nhiều đặc quyền riêng dành cho bạn</p>
            </div>
            <div class="thong-bao" style=" width: 460px; height: 50px; padding-left: 40px;">
                <p style="font-size:16px; line-height: 50px; color: red; text-align: center">@ViewBag.thongBao</p>
            </div>
            <div class="input-form">
                <p class="label-input">Tên đăng nhập</p>
                <input type="text" name="loginName">
            </div>
            <div class="input-form">
                <p class="label-input">Email</p>
                <input type="text" name="email">
            </div>
            <div class="input-form">
                <p class="label-input">Mật khẩu</p>
                <input type="password" name="password">
            </div>
            <div class="input-form">
                <p class="label-input">Xác nhận mật khẩu</p>
                <input type="password" name="passwordconfirm">
            </div>
            <div class="submit-button">
                <button type="submit" class="register">Đăng ký</button>
            </div>

        </form>
    </div>
</body>
</html>
